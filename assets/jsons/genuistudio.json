{
  "type": "Scaffold",
  "props": {
    "appBar": {"type": "AppBar", "props": {"title": "UiJsonGen Studio"}}
  },
  "child": {
    "type": "Padding",
    "props": {"padding": "EdgeInsets.all(12)"},
    "child": {
      "type": "Row",
      "children": [
        {
          "type": "Expanded",
          "props": {"flex": 3},
          "child": {
            "type": "Card",
            "child": {
              "type": "Padding",
              "props": {"padding": "EdgeInsets.all(12)"},
              "child": {
                "type": "DefaultTabController",
                "props": {"length": 2},
                "child": {
                  "type": "Column",
                  "children": [
                    {"type": "TabBar", "props": {"tabs": ["Tree", "Components"]}},
                    {"type": "SizedBox", "props": {"height": 8}},
                    {
                      "type": "Expanded",
                      "child": {
                        "type": "TabBarView",
                        "children": [
                          {"type": "JsonTreeView", "props": {"sourceKey": "target", "selectKey": "selectedNode"}},
                          {"type": "JsonComponentsView", "props": {"sourceKey": "components", "onAddKey": "addComponent"}}
                        ]
                      }
                    }
                  ]
                }
              }
            }
          }
        },
        {"type": "SizedBox", "props": {"width": 12}},
        {
          "type": "Expanded",
          "props": {"flex": 5},
          "child": {
            "type": "Card",
            "child": {
              "type": "Padding",
              "props": {"padding": "EdgeInsets.all(12)"},
              "child": {
                "type": "DefaultTabController",
                "props": {"length": 2},
                "child": {
                  "type": "Column",
                  "children": [
                    {"type": "TabBar", "props": {"tabs": ["Source", "Preview"]}},
                    {"type": "SizedBox", "props": {"height": 8}},
                    {
                      "type": "Expanded",
                      "child": {
                        "type": "TabBarView",
                        "children": [
                          {
                            "type": "JsonEditor",
                            "props": {
                              "controllerKey": "target",
                              "minLines": 18,
                              "maxLines": 40,
                              "onChanged": "updateTarget"
                            }
                          },
                          {"type": "PreviewPane", "props": {"sourceKey": "target", "modeKey": "previewMode"}}
                        ]
                      }
                    },
                    {"type": "SizedBox", "props": {"height": 8}},
                    {"type": "StatusText", "props": {"textKey": "errorText", "color": "red", "fontSize": 12}}
                  ]
                }
              }
            }
          }
        },
        {"type": "SizedBox", "props": {"width": 12}},
        {
          "type": "Expanded",
          "props": {"flex": 3},
          "child": {
            "type": "Card",
            "child": {
              "type": "Padding",
              "props": {"padding": "EdgeInsets.all(12)"},
              "child": {
                "type": "Column",
                "children": [
                  {"type": "Text", "props": {"text": "Properties"}},
                  {"type": "SizedBox", "props": {"height": 6}},
                  {"type": "StatusText", "props": {"textKey": "selectedPath", "color": "grey", "fontSize": 11}},
                  {"type": "SizedBox", "props": {"height": 8}},
                  {"type": "TextFormField", "props": {"labelText": "type", "controllerKey": "propType"}},
                  {"type": "TextFormField", "props": {"labelText": "objectId", "controllerKey": "propObjectId"}},
                  {"type": "TextFormField", "props": {"labelText": "text", "controllerKey": "propText"}},
                  {"type": "TextFormField", "props": {"labelText": "color", "controllerKey": "propColor"}},
                  {"type": "TextFormField", "props": {"labelText": "padding", "controllerKey": "propPadding"}},
                  {"type": "SizedBox", "props": {"height": 12}},
                  {"type": "Button", "props": {"text": "Apply", "onPressed": "applyProps"}}
                ]
              }
            }
          }
        }
      ]
    }
  }
}
